    <main class="container">


        <section class="cap-input-container">
            <fieldset>
                <form action="/" method="post" class="cap-form">
                    <div class="style-select">
                        <div class="cap-text-header">
                            <div class="select-left">
                                <input type="radio" name="style" class="style-select-button" id="ap" value="ap"
                                    checked><label for="ap">Associated Press</label>
                                <input type="radio" name="style" class="style-select-button" id="apa" value="apa"><label
                                    for="apa">APA</label>
                                <input type="radio" name="style" class="style-select-button" id="cms" value="cms"><label
                                    for="cms">CMS</label>
                                <input type="radio" name="style" class="style-select-button" id="mla" value="mla"><label
                                    for="mla">MLA</label>
                            </div>
                            <div class="number-right">
                                <% if (titleNumber > 1) { %> Titles Converted: <%= titleNumber %>
                                <% } else if (titleNumber === 1) { %>
                                Title Converted: <%= titleNumber %> <% } else {%><% } %>
                            </div>
                        </div>
                        <textarea name="title" class="cap-input" placeholder="Enter Title(s)"
                            autofocus><%= newTitle %></textarea>
                        <div class="button-box">
                            <input type="submit" class="cap-button" value="Capitalize">
                            <% if (titleNumber > 0) { %> <button id="copy-button" class="cap-button">Copy</button>
                            <% } else { %>
                            <% } %>
                        </div>
                </form>
            </fieldset>
    </main>

